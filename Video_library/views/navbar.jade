html
  head
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    // jQuery library
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    // Latest compiled JavaScript
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    style.
      #genre-dropdown { margin-right: 10px; }
      #search-bar { margin-right: 10px; }
  body
    nav.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/#/') Home
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/#/about') About
            li
              a(href='/#/contact') Contact
          form.navbar-form.navbar-right(action='/')
            //select#genre-dropdown.form-control(ng-model='select_model', ng-controller='HomeCtrl' ng-options='x for x in genres', name='genre_select')
            //  option(value='', disabled selected) Genre
            select#genre-dropdown.form-control(name='genre_select')
              option(value='', disabled selected) Genre
              option(value='Drama') Drama
              option(value='Fantasy') Fantasy
              option(value='SciFi') SciFi
            .form-group
              input#search-bar.form-control(type='text', name='keyword', placeholder='Search')
            button.btn.btn-default(type='submit') Submit
        // /.navbar-collapse
        // /.container-fluid